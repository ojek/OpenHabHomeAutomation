val BedroomTemp = 26.5d

rule "Bedroom_Temperature"
when
     Item TempHumidSensor_Bedroom_Main_Temperature received update
then
    if (TempHumidSensor_Bedroom_Main_Temperature.averageSince(now.minusMinutes(10) < BedroomTemp))
    {
        Diode.sendCommand("ON")
        SolidStateRelay.sendCommand("ON")
    }
    else
    {
        LedLight.sendCommand("OFF")
        SolidStateRelay.sendCommand("OFF")
    }
end