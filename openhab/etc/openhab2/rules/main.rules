rule "Bedroom_Temperature"
when
    Item TempHumidSensor_Bedroom_Main_Temperature received update
then
    val Number TargetTemp = 26.5d
    val Number BedroomTemp = TempHumidSensor_Bedroom_Main_Temperature.averageSince(now.minusMinutes(10))
    if (BedroomTemp < TargetTemp)
    {
        PinSwitch_Bedroom_Radiator.sendCommand("ON")
        SolidStateRelay_Bedroom_Radiator.sendCommand("ON")
    }
    else
    {
        PinSwitch_Bedroom_Radiator.sendCommand("OFF")
        SolidStateRelay_Bedroom_Radiator.sendCommand("OFF")
    }
end